#!/usr/bin/env bash
# This script displays the PID and process name of processes containing 'bash'.
# shellcheck disable=SC2009

for pid in /proc/[0-9]*; do
    if [ -d "$pid" ]; then
        cmdline=$(cat "$pid/comm" 2>/dev/null)  # Read the command name
        if [[ "$cmdline" == *bash* ]]; then
            echo "$(basename "$pid") $cmdline"  # Display PID and process name
        fi
    fi
done
